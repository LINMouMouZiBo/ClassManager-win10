	<Page.Resources>
		<controls:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
		<controls:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
		<controls:BoolConver x:Key="BoolConver"/>
	</Page.Resources>

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Grid.Row="1"
              Grid.ColumnSpan="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<!--<Grid.ColumnDefinitions>
				<ColumnDefinition x:Name="MasterColumn" Width="320"  />
				<ColumnDefinition x:Name="DetailColumn" Width="*" />
			</Grid.ColumnDefinitions>-->

			<Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Grid.Row="0">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Homeworks" Margin="48,8,8,8"
                           Style="{ThemeResource TitleTextBlockStyle}" />
					<AppBarButton x:Name="add_btn" Icon="Add" Click="AddButton_Click"></AppBarButton>
				</StackPanel>
			</Border>

			<!--SelectionChanged="OnSelectionChanged"
			ItemClick="OnItemClick"-->
			<ListView x:Name="MasterListView" 
                  SelectionMode="None"
                  ItemClick="OnItemClick"
                  IsItemClickEnabled="True"
                  ShowsScrollingPlaceholders="False"
                  
				  ItemsSource="{x:Bind OVM.Organization.Homeworks, Mode=OneWay}"
                  Grid.Row="1">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="md:Homework">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Grid.Row="0" Text="Name:"></TextBlock>
							<TextBlock Grid.Column="0" Grid.Row="1" Text="Start Date:"></TextBlock>
							<TextBlock Grid.Column="0" Grid.Row="2" Text="Deadline:"></TextBlock>
							<StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal">
								<TextBlock Text="Unlook Numbers:"></TextBlock>
								<TextBlock Text="{x:Bind unlooksNum, Mode=OneWay}"></TextBlock>
							</StackPanel>
							<!--<AppBarButton Grid.Column="1" Grid.Row="3" Icon="Bullets"></AppBarButton>-->
							<TextBlock Grid.Column="0" Grid.Row="5" Text="Content:"></TextBlock>
							<TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind name, Mode=OneWay}"></TextBlock>
							<TextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind join_on, Mode=OneWay}"></TextBlock>
							<TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind deadline, Mode=OneWay}"></TextBlock>
							<ListView Grid.ColumnSpan="2" Grid.Row="4" ItemsSource="{x:Bind unlooks, Mode=OneWay}" IsItemClickEnabled="False"  IsEnabled="False">
								<ListView.ItemTemplate >
									<DataTemplate x:DataType="md:User">
										<Grid>
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="auto"></ColumnDefinition>
												<ColumnDefinition Width="auto"></ColumnDefinition>
												<ColumnDefinition Width="auto"></ColumnDefinition>
											</Grid.ColumnDefinitions>
											<Grid.RowDefinitions>
												<RowDefinition Height="auto"></RowDefinition>
												<RowDefinition Height="auto"></RowDefinition>
												<RowDefinition Height="auto"></RowDefinition>
												<RowDefinition Height="auto"></RowDefinition>
												<RowDefinition Height="auto"></RowDefinition>
											</Grid.RowDefinitions>
											<TextBlock Grid.Column="1" Grid.Row="1" Text="Name:"></TextBlock>
											<TextBlock Grid.Column="2" Grid.Row="1" Text="{x:Bind name, Mode=OneWay}"></TextBlock>
											<TextBlock Grid.Column="1" Grid.Row="2" Text="Account:"></TextBlock>
											<TextBlock Grid.Column="2" Grid.Row="2" Text="{x:Bind account, Mode=OneWay}"></TextBlock>
											<TextBlock Grid.Column="1" Grid.Row="4" Text="Student Id:"></TextBlock>
											<TextBlock Grid.Column="2" Grid.Row="4" Text="{x:Bind student_id, Mode=OneWay}"></TextBlock>
										</Grid>
									</DataTemplate>
								</ListView.ItemTemplate>
							</ListView>
							<TextBlock Grid.ColumnSpan="2" Grid.Row="6" Text="{x:Bind content, Mode=OneWay}"></TextBlock>
						</Grid>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</Grid>

